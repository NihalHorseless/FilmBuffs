<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.filmbuffs.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_movieDetailFragment2"
            app:destination="@id/movieDetailFragment2" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment2"
        android:name="com.example.filmbuffs.MovieDetailFragment"
        android:label="fragment_moviedetails"
        tools:layout="@layout/fragment_moviedetails" >
        <action
            android:id="@+id/action_movieDetailFragment2_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>